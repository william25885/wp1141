{
  "name": "dinosaur-game",
  "private": true,
  "version": "1.0.0",
  "description": "A React + TypeScript web-based dinosaur game inspired by Google Chrome's offline dinosaur game",
  "keywords": ["game", "react", "typescript", "dinosaur", "web", "vite"],
  "author": "Your Name",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "start": "yarn dev",
    "test": "echo \"No tests specified\" && exit 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "yarn build && npx vite-bundle-analyzer dist",
    "serve": "yarn build && yarn preview"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "prettier": "^3.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^0.7.0"
  }
}
